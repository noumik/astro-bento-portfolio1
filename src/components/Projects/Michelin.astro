---
import Card from "../Card/index.astro";
import img from '../../lib/bbu.png';

const image = [
  { img: img },
]
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2" img={image[0].img.src}, opac="0.3", 
cubic="transform 20s cubic-bezier(0,1.95,.6,.96)", orig="center left", 
transformation="scale(1.5) rotate(-30deg) translateX(-30%) translateY(0%)", 
scl="scale(1.5) rotate(-30deg)", backpos="center right 125%">

  <div class="flex justify-between w-full items-start mb-2">
    <div class="flex flex-col">
      <h2 class="text-xl font-bold m-0 z-20">Michelin</h2>
      <h2>Machine Vision</h2>
      <a href="https://sive.rs/nowff" target="_blank">
      </a>
    </div>
  </div>
  <p class="text-xs">Description</p>
</Card>
